<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_login"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.roshka.porteriadta.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_recoveryDialog"
            app:destination="@id/recoveryDialog" />
        <action
            android:id="@+id/action_loginFragment_to_updatePass"
            app:destination="@id/updatePass" />
    </fragment>
    <dialog
        android:id="@+id/recoveryDialog"
        android:name="com.roshka.porteriadta.ui.recovery.RecoveryDialog"
        android:label="dialog_recovery"
        tools:layout="@layout/dialog_recovery" >
        <action
            android:id="@+id/action_recoveryDialog_to_loginFragment"
            app:destination="@id/loginFragment" />
    </dialog>
    <fragment
        android:id="@+id/updatePass"
        android:name="com.roshka.porteriadta.ui.updatePass.UpdatePass"
        android:label="fragment_update_pass"
        tools:layout="@layout/fragment_update_pass" />


</navigation>